@model MiniSpotify.Models.Artist
@{
    ViewData["Title"] = "Edit artist";
}
<h4>Edit artist</h4>
<form asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-2">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control bg-secondary text-light border-0" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Country" class="form-label"></label>
        <input asp-for="Country" class="form-control bg-secondary text-light border-0" />
    </div>
    <button class="btn btn-light text-dark">Save</button>
    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
