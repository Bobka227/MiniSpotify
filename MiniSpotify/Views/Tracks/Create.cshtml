@model MiniSpotify.Models.Track
@{
    ViewData["Title"] = "Add track";
}

<h4 class="mb-3">Add track</h4>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-2">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control bg-secondary text-light border-0" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label class="form-label">Album</label>
        <select asp-for="AlbumId"
                asp-items="ViewBag.Albums"
                class="form-select bg-secondary text-light border-0">
        </select>
        <span asp-validation-for="AlbumId" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DurationSec" class="form-label"></label>
        <input asp-for="DurationSec" class="form-control bg-secondary text-light border-0" />
        <span asp-validation-for="DurationSec" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Audio file (mp3)</label>
        <input type="file" name="audioFile" class="form-control bg-secondary text-light border-0" />
    </div>

    <button class="btn btn-light text-dark">Save</button>
    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
