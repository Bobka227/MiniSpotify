@{
    Layout = null;
}
@inject MiniSpotify.Models.AppDbContext Db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MiniSpotify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<div class="modal fade" id="addToPlaylistModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">Add to playlist</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form method="post" asp-controller="Playlists" asp-action="AddTrack">
                @Html.AntiForgeryToken()
                <input type="hidden" name="trackId" id="atp-trackId" />
                <div class="modal-body">
                    <label class="form-label">Select playlist</label>
                    <select name="playlistId" class="form-select bg-secondary text-light border-0" required>
                        @foreach (var p in Db.Playlists.OrderBy(x => x.Name))
                        {
                            <option value="@p.Id">@p.Name</option>
                        }
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-light text-dark">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<body class="bg-dark text-light">
    <div class="app-wrapper d-flex">
        <aside class="sidebar p-3">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-music-note-beamed fs-4 me-2"></i>
                <span class="fw-bold">Your Library</span>
            </div>

            <form asp-controller="Search" asp-action="Index" method="get" class="mb-3">
                <div class="input-group input-group-sm">
                    <span class="input-group-text bg-secondary border-0 text-light">
                        <i class="bi bi-search"></i>
                    </span>
                    <input name="q" class="form-control bg-secondary text-light border-0" placeholder="Search artist / track / album" />
                </div>
            </form>

            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-uppercase text-secondary small">Playlists</span>
                <a class="btn btn-sm btn-outline-light" asp-controller="Playlists" asp-action="Create"><i class="bi bi-plus"></i></a>
            </div>

            @await Html.PartialAsync("_SidebarPlaylists") 
        </aside>

        <main class="content flex-fill p-4">
            <header class="d-flex align-items-center justify-content-between mb-3">
                <div class="d-flex gap-2">
                    <a class="btn btn-sm btn-secondary" href="javascript:history.back()"><i class="bi bi-chevron-left"></i></a>
                    <a class="btn btn-sm btn-secondary" href="javascript:history.forward()"><i class="bi bi-chevron-right"></i></a>
                </div>
                <nav class="d-flex gap-3">
                    <a asp-controller="Artists" asp-action="Index" class="text-decoration-none text-light">Artists</a>
                    <a asp-controller="Albums" asp-action="Index" class="text-decoration-none text-light">Albums</a>
                    <a asp-controller="Tracks" asp-action="Index" class="text-decoration-none text-light">Tracks</a>
                    <a asp-controller="Playlists" asp-action="Index" class="text-decoration-none text-light">Playlists</a>
                </nav>
            </header>

            <div class="page">
                @RenderBody()
            </div>
        </main>

        <aside class="now-playing p-3 d-none d-lg-block">
            <div class="small text-secondary text-uppercase mb-2">Now Playing</div>
            <div id="np-title" class="fw-semibold mb-1">—</div>
            <div id="np-sub" class="text-secondary small mb-3">—</div>
            <div class="mb-3" style="width:100%;aspect-ratio:1/1;background:#6c757d;border-radius:.75rem;overflow:hidden;">
                <img id="np-cover"
                     src="~/img/cover_placeholder.png"
                     alt="cover"
                     style="width:100%;height:100%;object-fit:cover;display:block;" />
            </div>
            <button class="btn btn-outline-light btn-sm" id="np-open"><i class="bi bi-plus"></i> Add to playlist</button>
        </aside>
    </div>

    <footer class="player d-flex align-items-center px-3">
        <div class="flex-grow-1 d-flex align-items-center gap-3">
            <button id="btn-prev" class="btn btn-link text-light"><i class="bi bi-skip-start-fill fs-4"></i></button>
            <button id="btn-play" class="btn btn-link text-light"><i class="bi bi-play-fill fs-2"></i></button>
            <button id="btn-next" class="btn btn-link text-light"><i class="bi bi-skip-end-fill fs-4"></i></button>

            <input id="seek" type="range" min="0" max="100" value="0" class="form-range flex-fill">
            <span id="time" class="small text-secondary">0:00 / 0:00</span>
        </div>
        <div class="d-flex align-items-center gap-2" style="width:240px;">
            <i class="bi bi-volume-up"></i>
            <input id="volume" type="range" min="0" max="1" step="0.01" value="1" class="form-range">
        </div>

        <audio id="audio"></audio>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/player.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
