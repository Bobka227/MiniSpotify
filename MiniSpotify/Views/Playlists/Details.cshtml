@{
    var playlist = (MiniSpotify.Models.Playlist)ViewBag.Playlist;
    var tracks = (IEnumerable<MiniSpotify.Models.Track>)ViewBag.Tracks;
    var allTracks = (IEnumerable<MiniSpotify.Models.Track>)ViewBag.AllTracks;
    ViewData["Title"] = playlist.Name;
}
@if (TempData["msg"] is string m)
{
    <div class="alert alert-secondary py-2 my-2">@m</div>
}

<h4>@playlist.Name</h4>

<form class="d-flex gap-2 mb-3" asp-action="AddTrack" method="post">
    <input type="hidden" name="playlistId" value="@playlist.Id" />
    <select name="trackId" class="form-select bg-secondary text-light border-0">
        @foreach (var t in allTracks)
        {
            <option value="@t.Id">@t.Title — @t.Album?.Artist?.Name</option>
        }
    </select>
    <button class="btn btn-outline-light" type="submit">Add track</button>
</form>

@if (!tracks.Any())
{
    <div class="text-secondary">No tracks yet.</div>
}
else
{
    <ul class="list-group list-group-flush">
        @foreach (var t in tracks)
        {
            <li class="list-group-item bg-transparent text-light d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">@t.Title</div>
                    <div class="text-secondary small">@t.Album?.Artist?.Name — @t.Album?.Title</div>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-outline-light btn-sm play-btn"
                            data-queue="playlist-@playlist.Id"
                            data-id="@t.Id"
                            data-src="@t.FilePath"
                            data-title="@t.Title"
                            data-artist="@t.Album?.Artist?.Name"
                            data-cover="@Url.Content(t.Album?.CoverPath ?? "")"
                            onclick="playFromButton(this)">
                        <i class="bi bi-play-fill"></i> Play
                    </button>

                    <form asp-action="RemoveTrack" method="post" class="m-0">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="playlistId" value="@playlist.Id" />
                        <input type="hidden" name="trackId" value="@t.Id" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                title="Remove from playlist"
                                onclick="return confirm('Remove @t.Title from \" @playlist.Name\"?');">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </form>
                </div>
            </li>

        }
    </ul>
}
