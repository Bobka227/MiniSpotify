@model MiniSpotify.Models.Playlist
@{
    ViewData["Title"] = "Edit playlist";
}

<h4 class="mb-3">Edit playlist</h4>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control bg-secondary text-light border-0" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" rows="3"
                  class="form-control bg-secondary text-light border-0"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-light text-dark">Save</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
