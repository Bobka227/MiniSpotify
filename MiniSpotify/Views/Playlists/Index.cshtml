@model IEnumerable<MiniSpotify.Models.Playlist>

<ul class="list-group list-group-flush">
    @foreach (var p in Model)
    {
        <li class="list-group-item bg-transparent text-light d-flex justify-content-between align-items-center">
            <a class="text-decoration-none text-light" asp-action="Details" asp-route-id="@p.Id">
                @p.Name
            </a>

            <div class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@p.Id">Edit</a>

                <form asp-action="Delete" asp-route-id="@p.Id" method="post"
                      onsubmit="return confirm('Delete playlist @p.Name?');">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </li>
    }
</ul>
