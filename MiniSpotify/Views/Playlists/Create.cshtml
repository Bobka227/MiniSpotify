@model MiniSpotify.Models.Playlist
@{
    ViewData["Title"] = "New playlist";
}

<h4>New playlist</h4>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-2">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control bg-secondary text-light border-0" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" rows="3" class="form-control bg-secondary text-light border-0"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-light">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
