@model MiniSpotify.Models.Album
@{
    ViewData["Title"] = "Edit album";
}
<h4>Edit album</h4>
<form asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-2">
        <label class="form-label">Artist</label>
        <select asp-for="ArtistId" class="form-select bg-secondary text-light border-0"
                asp-items="(SelectList)ViewBag.Artists"></select>
    </div>
    <div class="mb-2">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control bg-secondary text-light border-0" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="ReleaseDate" class="form-label"></label>
        <input asp-for="ReleaseDate" type="date" class="form-control bg-secondary text-light border-0" />
    </div>
    <div class="mb-2">
        <label class="form-label">Cover image (jpg/png)</label>
        <input type="file" name="coverFile" accept="image/*" class="form-control bg-secondary text-light border-0" />
        @if (!string.IsNullOrWhiteSpace(Model.CoverPath))
        {
            <div class="mt-2"><img src="@Url.Content(Model.CoverPath)" style="height:120px;border-radius:.5rem;" /></div>
        }
    </div>
    <button class="btn btn-light text-dark">Save</button>
    <a asp-action="Index" class="btn btn-outline-light">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
