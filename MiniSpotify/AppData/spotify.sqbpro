-- ===== Сущности =====
CREATE TABLE IF NOT EXISTS Artist (
    Id            INTEGER PRIMARY KEY,
    Name          TEXT    NOT NULL,
    Country       TEXT,
    CreatedAt     TEXT    NOT NULL DEFAULT (datetime('now')),
    UpdatedAt     TEXT    NOT NULL DEFAULT (datetime('now'))
);

CREATE TABLE IF NOT EXISTS Album (
    Id            INTEGER PRIMARY KEY,
    ArtistId      INTEGER NOT NULL,
    Title         TEXT    NOT NULL,
    ReleaseDate   TEXT,                    -- YYYY-MM-DD
    CoverPath     TEXT,                    -- относительный путь к обложке, если понадобится
    CreatedAt     TEXT    NOT NULL DEFAULT (datetime('now')),
    UpdatedAt     TEXT    NOT NULL DEFAULT (datetime('now')),
    FOREIGN KEY (ArtistId) REFERENCES Artist(Id) ON DELETE CASCADE,
    UNIQUE (ArtistId, Title)
);

CREATE TABLE IF NOT EXISTS Track (
    Id            INTEGER PRIMARY KEY,
    AlbumId       INTEGER NOT NULL,
    Title         TEXT    NOT NULL,
    DurationSec   INTEGER CHECK (DurationSec IS NULL OR DurationSec &gt;= 0),
    FilePath      TEXT,                    -- напр. /music/adele_hello.mp3
    CreatedAt     TEXT    NOT NULL DEFAULT (datetime('now')),
    UpdatedAt     TEXT    NOT NULL DEFAULT (datetime('now')),
    FOREIGN KEY (AlbumId) REFERENCES Album(Id) ON DELETE CASCADE,
    UNIQUE (AlbumId, Title)
);

CREATE TABLE IF NOT EXISTS Playlist (
    Id            INTEGER PRIMARY KEY,
    Name          TEXT    NOT NULL,
    Description   TEXT,
    CreatedAt     TEXT    NOT NULL DEFAULT (datetime('now')),
    UpdatedAt     TEXT    NOT NULL DEFAULT (datetime('now'))
);

-- связь M:N + порядок треков в плейлисте
CREATE TABLE IF NOT EXISTS PlaylistTrack (
    PlaylistId    INTEGER NOT NULL,
    TrackId       INTEGER NOT NULL,
    Position      INTEGER NOT NULL DEFAULT 1 CHECK (Position &gt; 0),
    AddedAt       TEXT    NOT NULL DEFAULT (datetime('now')),
    PRIMARY KEY (PlaylistId, TrackId),
    FOREIGN KEY (PlaylistId) REFERENCES Playlist(Id) ON DELETE CASCADE,
    FOREIGN KEY (TrackId)   REFERENCES Track(Id)    ON DELETE CASCADE
);

-- ===== Индексы для скорости =====
CREATE INDEX IF NOT EXISTS IX_Album_ArtistId   ON Album(ArtistId);
CREATE INDEX IF NOT EXISTS IX_Track_AlbumId    ON Track(AlbumId);
CREATE INDEX IF NOT EXISTS IX_Artist_Name      ON Artist(Name);
CREATE INDEX IF NOT EXISTS IX_Album_Title      ON Album(Title);
CREATE INDEX IF NOT EXISTS IX_Track_Title      ON Track(Title);
CREATE INDEX IF NOT EXISTS IX_PlaylistTrack_Pos ON PlaylistTrack(PlaylistId, Position);

-- ===== Триггеры на UpdatedAt (опционально, но удобно) =====
CREATE TRIGGER IF NOT EXISTS trg_artist_updated
AFTER UPDATE ON Artist FOR EACH ROW
BEGIN
    UPDATE Artist SET UpdatedAt = datetime('now') WHERE Id = NEW.Id;
END;

CREATE TRIGGER IF NOT EXISTS trg_album_updated
AFTER UPDATE ON Album FOR EACH ROW
BEGIN
    UPDATE Album SET UpdatedAt = datetime('now') WHERE Id = NEW.Id;
END;

CREATE TRIGGER IF NOT EXISTS trg_track_updated
AFTER UPDATE ON Track FOR EACH ROW
BEGIN
    UPDATE Track SET UpdatedAt = datetime('now') WHERE Id = NEW.Id;
END;

CREATE TRIGGER IF NOT EXISTS trg_playlist_updated
AFTER UPDATE ON Playlist FOR EACH ROW
BEGIN
    UPDATE Playlist SET UpdatedAt = datetime('now') WHERE Id = NEW.Id;
END;

